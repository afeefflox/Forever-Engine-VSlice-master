<?xml version="1.0" encoding="utf-8"?>
<dialog width="500" height="600" title="Help">
	<tabview width="100%" height="100%">
		<box width="100%" text="Basics">
			<label text="No Help yet...." />
		</box>
		<box width="100%" text="Hotkeys">
			<tableview width="100%" height="510" contentWidth="100%">
				<header width="100%">
					<column id="action" text="Action" width="50%" />
					<column id="keybind" text="Keybind" width="50%" />
				</header>
				<data>
					<item action="Show User Guide" keybind="F1" />
          <item action="Move Camera" keybind="I/J/K/L"/>
          <item action="Zoom In/Out" keybind="Mouse Wheel"/>
          <item action="Reset Camera" keybind="T"/>
          <item action="Move Offset Selected (Mouse)" keybind="Left Click + Drag Mouse"/>
          <item action="Move Offset Selected (Keys)" keybind="Up/Down/Left/Right"/>
          <item action="Undo Offset Last" keybind="Ctrl + Z"/>
          <item action="Redo Offset Last" keybind="Ctrl + Y"/>
          <item action="Copy Offset" keybind="Ctrl + C"/>
          <item action="Paste Offset" keybind="Ctrl + V"/>
          <item action="Play Animation" keybind="Space"/>
          <item action="Previous Animation" keybind="Q"/>
          <item action="Next Animation" keybind="E"/>
          <item action="Delete Animation" keybind="Del"/>
          <item action="Save Character" keybind="Ctrl + S"/>
          <item action="Save Character As" keybind="Ctrl + Shift + S"/>
          <item action="Open Character" keybind="Ctrl + O"/>
          <item action="Exit" keybind="Esc"/>
				</data>
			</tableview>
		</box>
		<box width="100%" text="Even More Details">
			<label text="No Details yet...." />
    </box>
	</tabview>
</dialog>
