<vbox id="funny">
    <splitter direction="vertical" width="1280" height="720" verticalAlign="center" horizontalAlign="center">
        <splitter direction="horizontal" width="100%" height="5%">
            <box width="100%" height="100%" style="background-color: #FFAAAA;background-opacity:.3;clip:true;">
                <import source="components/menubar.xml" verticalAlign="center" horizontalAlign="center" />
            </box>
        </splitter>
        <splitter direction="horizontal" width="100%" height="95%">
            <box width="80%" height="100%" style="background-color: #FFCCFF;background-opacity:0.0;clip:true;" />
            <splitter direction="vertical" width="20%" height="100%">
                <box width="100%" height="50%" style="background-color: #44444;background-opacity:.5clip:true;">
                    <import source="components/layers.xml" verticalAlign="center" horizontalAlign="center" />
                </box>
                <box width="100%" height="50%" style="background-color: #FFCCAA">
                    <section-header text="Character Properties" />
                    <property-grid width="100%" height="100%">
                        <property-group text="Positioning">
                            <property id="propXPos" label="X pos" type="int" value="0" />
                            <property id="propYPos" label="Y pos" type="int" value="0" />
                        </property-group>
                        <property-group text="Scrolls">
                            <property id="propXScroll" label="X scroll" type="float" value="1" />
                            <property id="propYScroll" label="Y scroll" type="float" value="1" />
                        </property-group>
                        <property-group text="Misc">
                            <property id="zIndex" label="Z Order" type="int" value="0"/>
                        </property-group>
                    </property-grid>
                </box>
            </splitter>
        </splitter>
    </splitter>
</vbox>
